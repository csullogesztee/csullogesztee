@model ListingToDos2.ViewModels.ToDoUserViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>ToDo</title>
</head>
<body>
    <nav>
        <a href="/todo/list">ToDos</a> |
        <a href="/todo/add">Add new ToDo</a> |
        <a href="/user/list">Users</a> |
        <a href="/user/add">Add new User</a> |
    </nav>
    <table>
        <thead>
            <tr>
                <td>Date</td>
                <td>Creator</td>
                <td>Title</td>
                <td>IsUrgent</td>
                <td>IsDone</td>
                <td>Assignee</td>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
                    <tr>
                        <td>@Model.GetOneToDo().Date</td>
                        <td>@Model.GetOneToDo().Creator.Name</td>
                        <td>@Model.GetOneToDo().Title</td>
                        <td>@Model.GetOneToDo().IsUrgent</td>
                        <td>@Model.GetOneToDo().IsDone</td>
                        <td>@Model.GetOneToDo().Assignee.Name</td>
                        <td><a href="/todo/delete/@Model.GetOneToDo().Id" class="btn btn-info btn-lg" role="button">Delete</a></td>
                        <td><a href="/todo/edit/@Model.GetOneToDo().Id" class="btn btn-info btn-lg" role="button">Edit</a></td>
                    </tr>

        </tbody>
    </table>
</body>
</html>
