@model ListingToDos2.ViewModels.ToDoUserViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>List of ToDos</title>
</head>
<body>
    <nav>
        <a href="/todo/add">Add new ToDo</a> |
        <a href="/todo/list">ToDos</a> |
        <a href="/user/add">Add new User</a> |
    </nav>
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Number of Todos</td>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var user in Model.UserList)
                {
                    <tr>
                        <td><a href="/user/@user.UserId">@user.Name</a></td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.ToDos.Count()</td>
                        <td><a href="/user/delete/@user.UserId" class="btn btn-info btn-lg" role="button">Delete</a></td>
                        <td><a href="/user/edit/@user.UserId" class="btn btn-info btn-lg" role="button">Edit</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>